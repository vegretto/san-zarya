extends ../layout
include ../mixins/mixins

block content
    main.page-wrapper.page-wrapper--testimonials
        .page-topper
            .container
                h1.h1-common.text-center Отзывы о санатории
                .btns-wrapper.-center.-mobile-center
                    button.btn-rdsgn.-blue.-medium.js-open-modal(data-modal="modal-testimonials") Оставить свой отзыв
